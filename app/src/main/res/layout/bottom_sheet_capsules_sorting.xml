<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_sorting_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/sort_by"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textColor="@color/colorOnSurface" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@color/horizontalDividerBackground" />

    <RadioGroup
        android:id="@+id/radio_group_sorting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_button_serial_newest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorSecondary"
            android:text="@string/capsule_serial_newest"
            android:textColor="@color/colorOnSurface" />

        <RadioButton
            android:id="@+id/radio_button_serial_oldest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorSecondary"
            android:text="@string/capsule_serial_oldest"
            android:textColor="@color/colorOnSurface" />

        <RadioButton
            android:id="@+id/radio_button_status_asc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorSecondary"
            android:text="@string/capsule_status_active_first"
            android:textColor="@color/colorOnSurface" />

        <RadioButton
            android:id="@+id/radio_button_status_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorSecondary"
            android:text="@string/capsule_status_active_last"
            android:textColor="@color/colorOnSurface" />
    </RadioGroup>

</LinearLayout>